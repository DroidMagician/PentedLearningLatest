<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.pented.learningapp.authScreens.viewModel.VerifyOTPVM" />
    </data>
<FrameLayout
    android:layout_width="match_parent"
    android:id="@+id/mainFrame"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        tools:context=".authScreens.OTPActivity">

        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_otp_bg"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_100sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/white_card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_35sdp"
                    android:paddingEnd="@dimen/_35sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:text="@string/one_time_password"
                            android:textColor="@color/heading_gray"
                            android:textSize="@dimen/_22sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/we_have_sent_otp"
                            android:textColor="@color/secondary_gray"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:textColor="@color/heading_gray"
                            android:textSize="@dimen/_13sdp"
                            tools:text="+919725139659" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvTimeRemaining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="Time remaining : "
                                android:textColor="@color/secondary_gray"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/tvSeconds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="30s"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>


                        <!--                    <in.aabhasjindal.otptextview.OtpTextView-->
                        <!--                        android:id="@+id/otp_view"-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:textColor="#000"-->
                        <!--                        app:height="@dimen/_40sdp"-->
                        <!--                        app:width="@dimen/_40sdp"-->
                        <!--                        app:otp_box_background="@drawable/edittext_bg"-->
                        <!--                        android:layout_marginTop="@dimen/_5sdp"-->
                        <!--                        app:length="4"-->
                        <!--                        app:otp_text_size="@dimen/_12sdp"/>-->

                        <!--                    <com.chaos.view.PinView-->
                        <!--                        android:id="@+id/pinView"-->
                        <!--                        style="@style/PinWidget.PinView"-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="@dimen/_40sdp"-->
                        <!--                        android:layout_marginTop="@dimen/_5sdp"-->
                        <!--                        android:gravity="center"-->
                        <!--                        android:inputType="number"-->
                        <!--                        app:itemSpacing="@dimen/_20sdp"-->
                        <!--                        android:textColor="@color/black"-->
                        <!--                        app:itemCount="4"-->
                        <!--                        app:viewType="rectangle" />-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">

                            <com.pented.learningapp.widget.otpView.OtpEdittext
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:id="@+id/otpView"
                                android:layout_centerHorizontal="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14ssp"
                                app:OtpItemCount="4"
                                app:OtpItemHeight="@dimen/_45sdp"
                                app:OtpItemSpacing="@dimen/_10sdp"
                                app:OtpItemWidth="@dimen/_45sdp"
                                app:OtpLineColor="@color/black"
                                app:OtpLineWidth="1dp"
                                app:OtpViewType="rectangle" />
                        </RelativeLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_bg"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etOtp1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:fontFamily="@font/nunito_regular"
                                    android:inputType="phone|number"
                                    android:maxLines="1"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:textColorHint="@color/secondary_gray"
                                    android:textSize="@dimen/_22sdp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_bg"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etOtp2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:fontFamily="@font/nunito_regular"
                                    android:inputType="phone|number"
                                    android:maxLines="1"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:textColorHint="@color/secondary_gray"
                                    android:textSize="@dimen/_22sdp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_bg"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etOtp3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:fontFamily="@font/nunito_regular"
                                    android:inputType="phone|number"
                                    android:maxLines="1"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:textColorHint="@color/secondary_gray"
                                    android:textSize="@dimen/_22sdp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_bg"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etOtp4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:fontFamily="@font/nunito_regular"
                                    android:inputType="phone|number"
                                    android:maxLines="1"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:textColorHint="@color/secondary_gray"
                                    android:textSize="@dimen/_22sdp" />


                            </LinearLayout>

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_40sdp">

                            <LinearLayout
                                android:id="@+id/llResendOtp"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:visibility="gone"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_toStartOf="@+id/btnContinue"
                                android:background="@drawable/resend_btn_bg"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_bold"
                                    android:text="@string/resend_otp"
                                    android:textColor="@color/resend_otp_gray"
                                    android:textSize="@dimen/_13sdp" />

                            </LinearLayout>


                            <Button
                                android:id="@+id/btnContinue"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/button_bg"
                                android:fontFamily="@font/nunito_bold"
                                android:text="@string/cont"
                                style="?android:attr/borderlessButtonStyle"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp" />
                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llSignin"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:text="@string/use_security_code"
                            android:textColor="@color/secondary_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tvSignin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/sign_in"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_35sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="70dp"
                    app:cardElevation="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_otp_msg_icon" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>
    <include
        android:id="@+id/lilProgressBar"
        android:visibility="gone"
        layout="@layout/transparent_progressbar_layout" />

</FrameLayout>
</layout>