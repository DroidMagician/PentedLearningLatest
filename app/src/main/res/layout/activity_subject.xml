<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.pented.learningapp.homeScreen.home.viewModel.SubjectVM" />
    </data>
    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".homeScreen.home.SubjectActivity">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_minus15sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                app:cardElevation="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_20sdp">
                    <RelativeLayout
                        android:id="@+id/topLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_back_noti" />
                        <LinearLayout
                            android:layout_toRightOf="@+id/ivBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">



                            <ImageView
                                android:id="@+id/ivSubjectIcon"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:src="@drawable/ic_maths" />

                            <TextView
                                android:id="@+id/txtSubjectName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/mathematics"
                                android:textColor="@color/heading_gray"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/tvSubscribed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="@string/subscribed"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivSearch"
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_search" />
                        <LinearLayout
                            android:id="@+id/lilSearch"
                            android:layout_width="match_parent"
                            android:layout_toRightOf="@+id/ivBack"
                            android:background="@color/white"
                            android:visibility="gone"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/icSearch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_search"/>

                                <EditText
                                    android:layout_centerVertical="true"
                                    android:id="@+id/edtSearch"
                                    android:paddingRight="@dimen/_20sdp"
                                    android:layout_toRightOf="@+id/icSearch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:inputType="text"
                                    android:hint="@string/search"
                                    android:textSize="@dimen/_12sdp"
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:fontFamily="@font/nunito_regular"
                                    android:textColorHint="@color/secondary_gray"
                                    android:layout_marginLeft="@dimen/_10sdp"/>
                                <ImageView
                                    android:id="@+id/icCross"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/cancel"/>

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/topLayout"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:id="@+id/tvCompletedChapters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/orange_card_bg"
                            android:fontFamily="@font/nunito_bold"
                            android:paddingStart="@dimen/_7sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="3 / 6  chapters completed"
                            android:textColor="@color/heading_gray"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/txtPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="260 points"
                            android:textColor="@color/secondary_gray"
                            android:textSize="@dimen/_10sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvCompletedChapters"
                            android:layout_marginTop="@dimen/_15sdp">

                            <com.skydoves.progressview.ProgressView
                                android:id="@+id/progressView1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_6sdp"
                                app:progressView_autoAnimate="true"
                                app:progressView_colorBackground="@color/lightGray"
                                app:progressView_colorProgress="@color/primary"
                                app:progressView_labelColorInner="@color/white"
                                app:progressView_labelColorOuter="@color/black"
                                app:progressView_labelSize="0dp"
                                app:progressView_labelSpace="0dp"
                                app:progressView_labelText=""
                                app:progressView_max="100"
                                app:progressView_min="0"
                                app:progressView_orientation="horizontal"
                                app:progressView_padding="1dp"
                                app:progressView_progressFromPrevious="true"
                                app:progressView_radius="12dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_line_progress"
                                android:visibility="gone" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_line_progress_fill"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/llImpQue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:visibility="visible">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:visibility="gone"
                            android:orientation="horizontal"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/_12sdp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/icImpIcon"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_imp_que" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nunito_semibold"
                                        android:text="@string/todays_important_questions"
                                        android:textColor="@color/heading_gray"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nunito_semibold"
                                        android:maxLines="2"
                                        android:text="@string/just_solving_these_questions"
                                        android:textColor="@color/secondary_gray"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMainGetNoti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_20sdp"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/get_notifications_of"
                            android:textColor="@color/secondary_gray"
                            android:textSize="@dimen/_12sdp" />
                        <LinearLayout
                            android:id="@+id/llSubscribe"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/skip_btn_bg"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_bold"
                                android:text="@string/subscribe_this_subject"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvChapters"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:nestedScrollingEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

        <include
            android:id="@+id/lilProgressBar"
            layout="@layout/transparent_progressbar_layout"
            android:visibility="gone" />

    </FrameLayout>
</layout>